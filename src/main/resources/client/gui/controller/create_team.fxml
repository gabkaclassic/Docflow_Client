<AnchorPane prefHeight="1024.0" prefWidth="1440.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.gui.controller.CreateTeamController">
   <children>
      <TextField fx:id="teamTitle" layoutX="352.0" layoutY="387.0" prefHeight="45.0" prefWidth="377.0" promptText="Team title">
         <font>
            <Font size="14.0" />
         </font></TextField>
      <Button layoutX="352.0" layoutY="610.0" mnemonicParsing="false" onAction="#createTeam" prefHeight="55.0" prefWidth="377.0" stylesheets="@button.css" text=" Create team" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font></Button>
      <Label layoutX="350.0" layoutY="241.0" prefHeight="54.0" prefWidth="370.0" text="Create new team">
         <font>
            <Font size="45.0" />
         </font>
      </Label>
      <TextField fx:id="username" layoutX="352.0" layoutY="511.0" prefHeight="45.0" prefWidth="240.0" promptText="Participant's account nick">
         <font>
            <Font size="14.0" />
         </font></TextField>
      <Label layoutX="352.0" layoutY="348.0" prefHeight="24.0" prefWidth="151.0" text="Add team name">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <SplitMenuButton fx:id="participantsList" layoutX="824.0" layoutY="387.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="240.0" text="Participants list">
         <items>
            <MenuItem mnemonicParsing="false" text="Action 1" />
            <MenuItem mnemonicParsing="false" text="Action 2" />
         </items>
         <font>
            <Font size="18.0" />
         </font>
      </SplitMenuButton>

      <Button layoutX="612.0" layoutY="511.0" minWidth="0.0" mnemonicParsing="false" onAction="#addParticipant" prefHeight="45.0" prefWidth="117.0" stylesheets="@add.css" text="Add" textFill="WHITE">

         <font>
            <Font size="18.0" />
         </font></Button>
      <Label fx:id="userError" layoutX="352.0" layoutY="440.0" prefHeight="30.0" prefWidth="377.0" text="Team with this title already exists" textFill="#e51010">
         <font>
            <Font size="14.0" />
         </font>
      </Label>

      <Label fx:id="teamError" layoutX="352.0" layoutY="568.0" prefHeight="25.0" prefWidth="370.0" text="Account with this username doesn't exists" textFill="#e51010">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button layoutX="25.0" layoutY="25.0" minWidth="53.0" mnemonicParsing="false" onAction="#back" prefHeight="50.0" prefWidth="145.0" style="-fx-border-radius: 10;" stylesheets="@back_button.css" text="Back" textFill="#105aaa">
         <font>
            <Font size="18.0" />
         </font></Button>
      <Label layoutX="352.0" layoutY="480.0" prefHeight="24.0" prefWidth="110.0" text="Add people">

         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="creationError" layoutX="349.0" layoutY="686.0" prefHeight="17.0" prefWidth="377.0" text="Label" textFill="#e40f07" />
      <ProgressIndicator fx:id="indicator" layoutX="282.0" layoutY="361.0" prefHeight="25.0" prefWidth="28.0" visible="false" />
      <Label fx:id="noParticipantsMessage" layoutX="824.0" layoutY="446.0" prefHeight="18.0" prefWidth="234.0" text="Label" textFill="#e40f07" />
